<!-- views/signup.ejs -->
<!doctype html>
<html>
    <head>
        <%- include('../partials/head.ejs') -%>
    </head>
    <body>
        <div>
            <%- include('../partials/header2.ejs') -%>
        </div>
        <main>
            <div class="container">
                
                <div class="signup-form">
    
                    <center><h4><span class="fa fa-sign-in"></span> FynOutt Registration Completion </h4></center>
    
                    <!-- show any messages that come back with authentication -->
                    <% if (message.length > 0) { %>
                        <div class="alert alert-danger"><%= message %></div>
                    <% } %>
    
                    <!-- LOGIN FORM -->
                    <form action="/signup" method="post" class="signup-form">
                        <!-- <div class="form-group">
                            <label>Email</label>
                            <input type="text" maxlength="50" class="form-control" name="email" placeholder="Enter your email." required>
                        </div> -->
                        <center>
                            Signing Up as <%= email %>
                        </center>
                        <input type="hidden" name="email" value="<%= email %>">
                        <div class="form-group">
                            <label>First Name</label>
                            <input type="text" maxlength="20" class="form-control" name="firstname" placeholder="Enter Your First Name." required>
                        </div>
                        <div class="form-group">
                            <label>Last Name</label>
                            <input type="text" maxlength="20" class="form-control" name="lastname" placeholder="Enter Your Last Name." required>
                        </div>                        
                        <div class="form-group">
                            <label>Other Names (If Any)</label>
                            <input type="text" maxlength="30" class="form-control" name="others" placeholder="optional" >
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" class="form-control" name="password" placeholder="Enter a password." required>
                        </div>
    
                        <button type="submit" class="btn btn-primary btn-md">Signup</button>
                    </form>
    
                    <hr>
    
                    <p>Already have an account? <a href="/login">Login</a></p>
                    <p>Or go <a href="/">home</a>.</p>
    
                </div>
    
            </div>
        </main>
    </body>
    <footer>
        <%- include('../partials/footer.ejs') -%>
    </footer>
</html>